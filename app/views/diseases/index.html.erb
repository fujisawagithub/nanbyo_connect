<h3 style="text-align:center">病名検索</h3>

<div class="parent">
  <dl class="searchbox ">
    <%= search_form_for @q, url: search_diseases_path do |f| %>
    <dt><%= f.search_field :name_or_number_i_cont, placeholder: "告示番号または病名"%></dt>
    <dd><%= f.submit '検索', class: 'search-btn' %></dd>
    <% end %>
  </dl>
</div>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">告示番号</th>
      <th scope="col">病名</th>
    </tr>
  </thead>

  <tbody>
    <% @diseases.each do |disease| %>
    <tr>
      <td align="center"><%= link_to disease.number, disease %></td>
      <td><%= link_to disease.name, disease %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
<%= link_to '疾患登録', new_disease_path %>
<% end %>
