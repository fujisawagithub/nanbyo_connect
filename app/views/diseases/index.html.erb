<h1>病名検索</h1>
<%= search_form_for @q, url: search_diseases_path do |f| %>

<%= f.search_field :name_or_number_i_cont, placeholder: "病名または告示番号"%>
<br>
<%= f.submit '検索' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>告示番号</th>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <p id="notice"><%= notice %></p>

  <tbody>
    <% @diseases.each do |disease| %>
    <tr>
      <td><%= disease.number %></td>
      <td><%= disease.name %></td>
      <td><%= link_to 'Show', disease %></td>

      <% if current_user.admin? %>
      <td><%= link_to 'Edit', edit_disease_path(disease) %></td>
      <td><%= link_to 'Destroy', disease, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '疾患登録', new_disease_path %>
<%= link_to 'ホームに戻る', root_path %>