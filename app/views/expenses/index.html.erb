<h1>Expenses index</h1>

<table>
  <thead>
    <tr>
      <th>treatment_cost</th>
      <th>drug_cost</th>
      <th>other_cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <p id="notice"><%= notice %></p>

  <tbody>
    <% @expenses.each do |expense| %>
    <tr>
      <td><%#= expense.disease.onset_users.find(current_user.id).name%>
      <td><%= expense.user.name %></td>
      <td><%= expense.treatment_cost %></td>
      <td><%= expense.drug_cost %></td>
      <td><%= expense.other_cost %></td>
      <td><%= link_to 'Show', disease_expense_path(expense, id: expense.id) %></td>


      <%# if @expenses.select(:disease_id) 編集 == current_user %>
      <td><%= link_to 'Edit', edit_disease_expense_path(expense, id: expense.id) %></td>
      <td>
        <%= link_to 'Destroy', disease_expense_path(expense, id: expense.id), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      <%# end %>

    </tr>
    <% end %>
  </tbody>
</table>

