<%= notice %>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">名前</th>
      <th scope="col">年齢</th>
      <th scope="col">エリア</th>
      <th scope="col">コメント</th>
    </tr>
  </thead>



  <tbody>
    <% comments.each do |comment| %>
    <% if comment.id.present? %>
    <tr>
      <div class="comment-content" id="this_comment_<%= comment.id %>"></div>
      <td><%= comment.user.name %></td>
      <td><%= comment.user.age %></td>
      <td><%= comment.user.prefecture %></td>
      <td><%= comment.content %></td>
      <% if comment.user_id == current_user.id%>
      <td><%= link_to "編集", edit_disease_comment_path(disease, comment), remote: true %></td>
      <td><%= link_to "削除",disease_comment_path(comment.disease_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} %></td>
    </tr>
  </tbody>
  <% end %>
  <% end %>
  <% end %>
</table>