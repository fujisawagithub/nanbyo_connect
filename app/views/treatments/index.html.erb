<h1>Expenses index</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>年齢</th>
      <th>エリア</th>
      <th>affected_on</th>
      <th>drug_name</th>
      <th>content</th>
      <th>advice</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <p id="notice"><%= notice %></p>

  <tbody>
    <% @treatments.each do |treatment| %>
    <tr>
      <td><%= treatment.user.name %></td>
      <td><%= treatment.user.age %></td>
      <td><%= treatment.user.prefecture %></td>
      <td><%= treatment.affected_on %></td>
      <td><%= treatment.drug_name %></td>
      <td><%= treatment.content %></td>
      <td><%= treatment.advice %></td>
      <%#= link_to 'Show', disease_treatment_path(treatment, id: treatment.id) %>
      <% if treatment.user_id == current_user.id %>

      <td><%= link_to 'Edit', edit_disease_treatment_path(treatment, id: treatment.id) %></td>
      <td>
        <%= link_to 'Destroy', disease_treatment_path(treatment, id: treatment.id), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
