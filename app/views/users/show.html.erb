<% if user_signed_in? && @user == current_user %>
<h3 style="text-align:center"><%= @user.name %>さんのマイページ</h3>
<% else %>
<h1>ユーザーページ</h1>
<% end %>
<br>

<% if @user.image.blank? %>
<p style="text-align:center">
  <img src="/assets/icon.png" width="90" height="90">
</p>
<% else%>
<p style="text-align:center">
  <%= image_tag @user.image.url, size: '150x150' %>
</p>
<% end %>
<br>
<div style="text-align:center">
  <%= link_to ' 登録した疾患', onsets_path,id: @disease ,class:"btn btn-info btn-lg far fa-calendar-plus "%>
</div>
<br>

<p style="text-align:center">
  <strong>名前:</strong>
  <%= @user.name %>
</p>

<p style="text-align:center">
  <strong>メールアドレス:</strong>
  <%= @user.email %>
</p>

<p style="text-align:center">
  <strong>年齢:</strong>
  <%= @user.age %>
</p>

<p style="text-align:center">
  <strong>エリア:</strong>
  <%= @user.prefecture %>
</p>

<p style="text-align:center">
  <strong>生年月日:</strong>
  <%= @user.birthday %>
</p>

<p style="text-align:center">
  <strong>自己紹介:</strong>
  <%= @user.self_introduction %>
</p>


<p style="text-align:center">
  <strong>関係区分:</strong>
  <%= @user.classification %>
</p>
<%# userとdisease.idをリレーションする%>

<%#= link_to 'Edit', edit_user_path(@user) %>
<%#= link_to 'ホームに戻る', root_path %>
<p style="text-align:center">
  <% if user_signed_in? && @user == current_user %>
  <%= link_to '戻る', root_path %>/
  <%= link_to "プロフィール編集", edit_user_path(current_user) %>
  <% end %>
</p>