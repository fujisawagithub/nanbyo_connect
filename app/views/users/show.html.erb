<% else %>
<h1>ユーザーページ</h1>
<% end %>

<% unless @user.image.blank? %>
<p>
  <strong>Image:</strong>
  <%= image_tag @user.image.url, size: '150x150' %>
</p>
<% end %>

<strong>Email:</strong>
<%= @user.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @user.age %>
</p>

<p>
  <strong>Prefecture:</strong>
  <%= @user.prefecture %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @user.birthday %>
</p>

<p>
  <strong>Self introduction:</strong>
  <%= @user.self_introduction %>
</p>


<p>
  <strong>Classification:</strong>
  <%= @user.classification %>
</p>
